@model MedicalStoreWebAPI.Models.Medicine

@{
    ViewBag.Title = "Buy";
}

<br />
<br />


<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.MedicineID)

        <div class="form-group">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyName)
            @Html.TextBoxFor(model => model.CompanyName, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.CompanyName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price)
            @Html.TextBoxFor(model => model.Price, new { @readonly = "readonly" })
            @Html.ValidationMessageFor(model => model.Price)
        </div>
        <div class="form-group">
            @Html.Label("Quantity")
            @Html.EditorFor(model => model.Srock)
            @Html.ValidationMessageFor(model => model.Srock)
        </div>

        <div class="form-group">
            <input type="submit" value="Buy" class="btn button" />
        </div>
    }
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
